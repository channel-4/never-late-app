{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter Android",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "android",
            "env": {
                "EMULATOR_ARGS": "-no-audio"
            }
        },
        {
            "name": "Flutter Android Debug",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "android",
            "args": [
                "--debug"
            ]
        },
        {
            "name": "Flutter Android Release",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "android",
            "args": [
                "--release"
            ]
        },
        {
            "name": "Flutter Web (Chrome - Port 8080)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "chrome",
            "args": [
                "--web-port=8080"
            ]
        },
        {
            "name": "Flutter Web Debug (Chrome - Port 8080)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "deviceId": "chrome",
            "args": [
                "--web-port=8080",
                "--debug"
            ]
        }
    ]
}